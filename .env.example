# ==============================================
# Secure P2P Messenger - Environment Variables
# ==============================================
# Copy this file to .env and update with your values

# ----------------------------------------------
# Environment
# ----------------------------------------------
NODE_ENV=development
# Options: development, staging, production

# ----------------------------------------------
# Database Configuration (PostgreSQL)
# ----------------------------------------------
DB_HOST=localhost
DB_PORT=5432
DB_NAME=secure_p2p_messenger
DB_USER=postgres
DB_PASSWORD=postgres
# IMPORTANT: Change password in production!

# ----------------------------------------------
# Server Configuration
# ----------------------------------------------
PORT=8080
WS_PORT=8081
# WebSocket server port for signaling

# ----------------------------------------------
# JWT Authentication
# ----------------------------------------------
JWT_SECRET=your-secret-key-change-in-production
# CRITICAL: Generate a strong random secret for production
# Example: openssl rand -base64 64
JWT_EXPIRES_IN=7d
# Token expiration time (e.g., 7d, 24h, 60m)

# ----------------------------------------------
# TURN/STUN Server Configuration
# ----------------------------------------------
EXTERNAL_IP=127.0.0.1
# Your server's public IP address (required for TURN)

TURN_USERNAME=test
TURN_PASSWORD=test
# TURN server credentials
# IMPORTANT: Change in production!

STUN_SERVER=stun:localhost:3478
TURN_SERVER=turn:localhost:3478
# STUN/TURN server URLs

# ----------------------------------------------
# Client Configuration
# ----------------------------------------------
CLIENT_PORT=80
# Port for the web client (Nginx)

VITE_WS_URL=ws://localhost:8081
# WebSocket URL for client to connect to server
# Production example: wss://your-domain.com

VITE_TURN_SERVER=turn:localhost:3478
# TURN server URL for client
# Production example: turn:your-domain.com:3478

VITE_STUN_SERVER=stun:localhost:3478
# STUN server URL for client
# Production example: stun:your-domain.com:3478

# ----------------------------------------------
# SSL/TLS Configuration (Production)
# ----------------------------------------------
# SSL_CERT_PATH=/path/to/cert.pem
# SSL_KEY_PATH=/path/to/key.pem
# Uncomment and set paths for SSL certificates

# ----------------------------------------------
# Logging
# ----------------------------------------------
LOG_LEVEL=info
# Options: error, warn, info, debug, verbose

# ----------------------------------------------
# CORS Configuration
# ----------------------------------------------
CORS_ORIGIN=http://localhost:5173
# Allowed origins for CORS
# Production: https://your-domain.com
# Multiple origins: https://domain1.com,https://domain2.com

# ----------------------------------------------
# Rate Limiting
# ----------------------------------------------
RATE_LIMIT_WINDOW_MS=60000
# Time window in milliseconds (default: 1 minute)

RATE_LIMIT_MAX_REQUESTS=100
# Maximum requests per window per IP

# ----------------------------------------------
# File Upload Limits
# ----------------------------------------------
MAX_FILE_SIZE=52428800
# Maximum file size in bytes (default: 50MB)

# ----------------------------------------------
# Session Configuration
# ----------------------------------------------
SESSION_TIMEOUT=3600000
# Session timeout in milliseconds (default: 1 hour)

# ----------------------------------------------
# Backup Configuration (Optional)
# ----------------------------------------------
# BACKUP_ENABLED=true
# BACKUP_SCHEDULE=0 2 * * *
# Cron schedule for automatic backups
# BACKUP_RETENTION_DAYS=7
