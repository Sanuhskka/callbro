# Staging Environment Configuration
NODE_ENV=staging

# Database
DB_HOST=postgres
DB_PORT=5432
DB_NAME=secure_p2p_messenger_staging
DB_USER=postgres
DB_PASSWORD=CHANGE_THIS_PASSWORD

# Server
PORT=8080
WS_PORT=8081

# JWT
JWT_SECRET=CHANGE_THIS_SECRET_KEY
JWT_EXPIRES_IN=7d

# TURN/STUN
EXTERNAL_IP=YOUR_STAGING_SERVER_IP
TURN_USERNAME=staging_user
TURN_PASSWORD=CHANGE_THIS_PASSWORD
STUN_SERVER=stun:staging.yourdomain.com:3478
TURN_SERVER=turn:staging.yourdomain.com:3478

# Client
CLIENT_PORT=80
VITE_WS_URL=wss://staging.yourdomain.com
VITE_TURN_SERVER=turn:staging.yourdomain.com:3478
VITE_STUN_SERVER=stun:staging.yourdomain.com:3478

# Logging
LOG_LEVEL=info

# CORS
CORS_ORIGIN=https://staging.yourdomain.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload
MAX_FILE_SIZE=52428800

# SSL/TLS
SSL_CERT_PATH=/etc/ssl/certs/staging-cert.pem
SSL_KEY_PATH=/etc/ssl/private/staging-key.pem
