# ==============================================
# Server Environment Variables
# ==============================================

# ----------------------------------------------
# Environment
# ----------------------------------------------
NODE_ENV=development
# Options: development, staging, production

# ----------------------------------------------
# Server Ports
# ----------------------------------------------
PORT=8080
# HTTP server port (if needed)

WS_PORT=8081
# WebSocket server port for signaling

# ----------------------------------------------
# Database Configuration (PostgreSQL)
# ----------------------------------------------
DB_HOST=localhost
# Database host (use 'postgres' for Docker)

DB_PORT=5432
# PostgreSQL port

DB_NAME=secure_p2p_messenger
# Database name

DB_USER=postgres
# Database user

DB_PASSWORD=postgres
# Database password
# CRITICAL: Change in production!

# ----------------------------------------------
# JWT Authentication
# ----------------------------------------------
JWT_SECRET=your-secret-key-change-in-production
# CRITICAL: Generate strong random secret for production
# Example: openssl rand -base64 64

JWT_EXPIRES_IN=7d
# Token expiration (e.g., 7d, 24h, 60m)

# ----------------------------------------------
# CORS Configuration
# ----------------------------------------------
CORS_ORIGIN=http://localhost:5173
# Allowed origins (comma-separated for multiple)

# ----------------------------------------------
# Rate Limiting
# ----------------------------------------------
RATE_LIMIT_WINDOW_MS=60000
# Time window in milliseconds

RATE_LIMIT_MAX_REQUESTS=100
# Max requests per window per IP

# ----------------------------------------------
# Logging
# ----------------------------------------------
LOG_LEVEL=info
# Options: error, warn, info, debug, verbose

# ----------------------------------------------
# Session
# ----------------------------------------------
SESSION_TIMEOUT=3600000
# Session timeout in milliseconds (1 hour)
