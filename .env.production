# Production Environment Configuration
# CRITICAL: Update all values before deploying!

NODE_ENV=production

# Database
DB_HOST=postgres
DB_PORT=5432
DB_NAME=secure_p2p_messenger
DB_USER=postgres
DB_PASSWORD=CHANGE_THIS_STRONG_PASSWORD

# Server
PORT=8080
WS_PORT=8081

# JWT - CRITICAL: Generate strong secret
# Generate with: openssl rand -base64 64
JWT_SECRET=CHANGE_THIS_TO_STRONG_RANDOM_SECRET
JWT_EXPIRES_IN=7d

# TURN/STUN - CRITICAL: Set your server's public IP
EXTERNAL_IP=YOUR_PUBLIC_IP_ADDRESS
TURN_USERNAME=production_user
TURN_PASSWORD=CHANGE_THIS_STRONG_PASSWORD
STUN_SERVER=stun:yourdomain.com:3478
TURN_SERVER=turn:yourdomain.com:3478

# Client
CLIENT_PORT=80
VITE_WS_URL=wss://yourdomain.com
VITE_TURN_SERVER=turn:yourdomain.com:3478
VITE_STUN_SERVER=stun:yourdomain.com:3478

# Logging
LOG_LEVEL=warn

# CORS
CORS_ORIGIN=https://yourdomain.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload
MAX_FILE_SIZE=52428800

# SSL/TLS - CRITICAL: Set certificate paths
SSL_CERT_PATH=/etc/ssl/certs/cert.pem
SSL_KEY_PATH=/etc/ssl/private/key.pem

# Session
SESSION_TIMEOUT=3600000

# Backup
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=7
